# Environment Configuration for Docker
NODE_ENV=production

# Database Connections
# SOURCE: Read-only connection to INGESTOR database
SOURCE_DB_URL=postgres://username:password@hostname:5432/ingestordb

# TARGET: Read-write connection to METRICS database
TARGET_DB_URL=postgres://username:password@hostname:5432/metricsdb

# Application Settings
APP_TIMEZONE=America/Argentina/Buenos_Aires
LOG_LEVEL=info
HTTP_PORT=3000
ENABLE_SCHEDULER=false

# Database Timeouts (optional)
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Metrics Configuration (optional)
RECOMPUTE_DAYS=30
